{
	"name": "@marianmeres/paging-store",
	"version": "2.0.0",
	"exports": "./src/mod.ts",
	"tasks": {
		"test": "deno test --watch",
		"npm:build": "deno run -A scripts/build-npm.ts",
		"npm:publish": "deno run -A scripts/build-npm.ts && cd ./.npm-dist && npm publish --access=public"
	},
	"imports": {
		"@marianmeres/store": "jsr:@marianmeres/store@^2.2.0",
		"@std/assert": "jsr:@std/assert@1",
		"@std/fs": "jsr:@std/fs@^1.0.20",
		"@std/path": "jsr:@std/path@^1.1.3"
	},
	"publish": {
		"include": ["src/", "LICENSE", "README.md"],
		"exclude": ["**/*.test.ts"]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 90,
		"indentWidth": 4
	},
	"lint": {
		"rules": {
			"exclude": ["no-explicit-any"]
		}
	}
}
